---
// components/FeaturedRoutes.astro
import RouteCard from './RouteCard.astro';

const routes = [
  {
    image: '/images/forest.png',
    title: 'Forest Trail Adventure',
    description: 'A scenic route through lush forests.'
  },
  {
    image: '/images/coast.png',
    title: 'Coastal Breeze Ride',
    description: 'Enjoy the refreshing sea breeze on this coastal ride.'
  },
  {
    image: '/images/mountain.png',
    title: 'Mountain Challenge',
    description: 'Test your endurance with this challenging mountain route.'
  }
];
---

<section class="max-w-6xl mx-auto mt-12 px-4">
  <h2 class="text-2xl font-bold mb-6">Featured Routes</h2>
  <div class="grid md:grid-cols-3 gap-6">
    {routes.map(route => (
      <RouteCard {...route} />
    ))}
  </div>
</section>
