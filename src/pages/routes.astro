---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import RouteItem from '../components/RouteItem';
// import FilterBar from '../components/FilterBar';
import rutas from './../data/data-pages.json';
import "../styles/routes.css";
---

<BaseLayout title="Listado de rutas">
    <Navbar />
    <section class="max-w-6xl mx-auto mt-12 px-4">
      <h1>Explora rutas</h1>
      <p class="subtitle">Descubre hermosas rutas de ciclismo en Colombia</p>
      <!-- <FilterBar client:load /> -->
  
      {rutas.map(route => (
      <RouteItem {...route} client:load />
      ))}
    </section>
</BaseLayout>
